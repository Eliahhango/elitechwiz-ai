# Server Configuration
NODE_ENV=production
PORT=3000

# WhatsApp Configuration
USE_PAIRING_CODE=true
PHONE_NUMBER=+1234567890  # Your phone number with country code

# AI Configuration
AI_PROVIDER=openai  # Options: openai, anthropic
AI_MODEL=gpt-4o     # Model to use (depends on provider)

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Session Configuration
SESSION_DIR=./baileys_auth_info  # Directory to store WhatsApp session data

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug

# Webhook Configuration (Optional)
ENABLE_WEBHOOK=false
WEBHOOK_URL=https://your-webhook-url.com/webhook
WEBHOOK_SECRET=your_webhook_secret_here
